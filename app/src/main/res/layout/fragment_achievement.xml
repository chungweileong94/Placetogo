<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chungwei.placetogo.AchievementFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <android.support.v7.widget.CardView
                android:id="@+id/pearlExplorerR1CardView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/div_10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="100">

                    <ImageView
                        android:id="@+id/imageViewCertiPE"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/div_230dp"
                        android:layout_weight="80"
                        android:background="@drawable/cert1" />

                    <TextView
                        android:id="@+id/textViewCertTitlePE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="20"
                        android:background="@color/colorPrimary"
                        android:padding="@dimen/div_5dp"
                        android:text="@string/pearl_explorer"
                        android:textColor="@android:color/background_light"
                        android:textSize="24sp" />
                </LinearLayout>

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/imageViewLockPE"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:padding="@dimen/div_50dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_lock" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/riddleSpecialistR1CardView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/div_10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="100">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/imageViewCertiRS"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/div_230dp"
                        android:layout_weight="80"
                        android:background="@drawable/cert1" />

                    <TextView
                        android:id="@+id/textViewCertTitleRS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="20"
                        android:background="@android:color/holo_orange_dark"
                        android:padding="@dimen/div_5dp"
                        android:text="@string/riddle_specialist"
                        android:textColor="@android:color/background_light"
                        android:textSize="24sp" />
                </LinearLayout>

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/imageViewRiddleSpecialist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_orange_dark"
                    android:padding="@dimen/div_50dp"
                    app:srcCompat="@drawable/ic_lock" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/couchPotatoR1CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/div_10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="100">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/imageViewCerti"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/div_230dp"
                        android:layout_weight="80"
                        android:background="@drawable/cert1" />

                    <TextView
                        android:id="@+id/textViewCertTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="20"
                        android:background="@android:color/holo_red_light"
                        android:padding="@dimen/div_5dp"
                        android:text="@string/pearl_explorer"
                        android:textColor="@android:color/background_light"
                        android:textSize="24sp" />
                </LinearLayout>

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/imageViewCouchPotato"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_red_light"
                    android:padding="@dimen/div_50dp"
                    app:srcCompat="@drawable/ic_lock" />

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
